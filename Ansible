# scenario 01 - pinging hosts

playbook.yml
---
- name: Ping multiple hosts
  hosts: all
  gather_facts: no
  tasks:
    - name: Ping hosts
      ansible.builtin.ping:

inventory.yml
all:
  hosts:
    deb01:
      ansible_host: 1.1.1.3
    deb02:
      ansible_host: 1.1.1.4
    #host3:
    #  ansible_host: 192.168.1.3

ansible-playbook -i inventory.yml ping_hosts.yml

