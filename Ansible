--- # optional start ofthe YAML  file
# dictionary 1
konrad:
 name: Konrad K
 numer: 666
 klasa: 7D
 sex: M
 
 # dictionary 1  
 # the same using abbreviatios
konrad: {name: Konrad K, numer:666, klasa: 7D, sex: M}

 ... # end of YAML


# LISTS: standard and abreviations

--- # STANDARD start of list 01
countries:
 - PL
 - UK
 - UA
... # end of list 01

--- # ABBREVIATIONS start of list 01 
countries: ['PL','UK','UA']
 ... # end of list 01

 #  LISTS INSIDE DICTIONARIES
 # dictionary 02
--- 
konrad:
 name: Konrad K
 numer: 666
 klasa: 7D
 sex: M
 likes:
  - going
  - playing
  - sleep

monika:
 name: Monika W
 numer: 777
 klasa: 8D
 sex: F
 likes:
  - outing
  - swimming
  - sleeping

... 
# SHOWING AND HIDING NEWLINES # USING Boolean (true/false)
# dictionary 03 START   
---
konrad:
 name: Konrad K
 numer: 666
 klasa: 7D
 sex: M
 likes:
  - going
  - playing
  - sleep
 result:
  maths: 88
  chem: 99
  bio: 22
 
 passed: TRUE

 messageIncludeNewLines: |
  Congrats
  You passed
 
 messageExcludeNewLines: >
  Congrats
  You passed
 ...
# dictionary 03 END

# Printing a list of dictionaries
---
vars:
 users:
  konrad:
   name: Konrad K
   numer: 666
   klasa: 7D
   sex: M
   likes:
    - going
    - playing
    - sleep

  monika:
   name: Monika W
  numer: 777
  klasa: 8D
  sex: F
  likes:
   - outing
   - swimming
   - sleeping
tasks:
 - name: Print records
   ansible.builin.debug:
    msg: "User {{ item.key }} is {{ item.value.name }} ({{ item.value.name}})"
   loop: "{{ lookup('ansible.builtin.dict', users) }}" 